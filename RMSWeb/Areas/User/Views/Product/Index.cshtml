<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Product Overview</h5>                 

                    <!-- Table with stripped rows -->
                    <table class="table datatable">
                    <thead>
                        <tr class="text-center">
                            <th>Product</th>
                            <th>Product Description</th>
                            <th>Product Group</th>
                            <th>UOM (Unit of Measure)</th>
                            <th>Product Type</th>
                            <th>Stock</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr class="text-center">
                                <td>@product.Number</td>
                                <td>@product.Description</td>
                                <td>@product.Group</td>
                                <td>@product.UOM</td>
                                <td>@product.Type</td>
                                <td>@product.AmountInStock</td>
                                <td>
                                    <button style="border: none">
                                        <a asp-action="Details" asp-route-productId = "@product.Id" >Details</a>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                </div>
            </div>

        </div>
    </div>
</section>
